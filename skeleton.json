{
    "skeleton": {
        "name": "blog",
        "templates": "./templates",
        "public": "./public",
        "pages": [
            {
                "type": "group",
                "name": "posts",
                "template": "post.html",
                "style": "markdown",
                "source": "./blog/posts",
                "public": "./blog",
                "slug": "/blog"
            },
            {
                "type": "group",
                "name": "summaries",
                "template": "post.html",
                "style": "markdown",
                "source": "./blog/summaries",
                "public": "./summaries",
                "slug": "/summaries"
            },
            {
                "type": "standalone",
                "group": "posts",
                "template": "home.html",
                "public": "./index.html"
            },
            {
                "type": "standalone",
                "template": "about.html",
                "public": "./about.html"
            },
            {
                "type": "standalone",
                "template": "recs.html",
                "public": "./recs.html"
            },
            {
                "type": "standalone",
                "template": "papers.html",
                "public": "./papers.html"
            },
            {
                "type": "standalone",
                "group": "summaries",
                "template": "summaries.html",
                "public": "./summaries.html"
            },
            {
                "type": "resource",
                "source": "./blog/static",
                "public": "./static"
            }
        ]
    }
}