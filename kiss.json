{
    "tasks": [
        {
            "name": "clean",
            "command": "rm -rf public-kiss"
        },
        {
            "name": "setup",
            "command": "mkdir -p public-kiss/blog",
            "depends": ["clean"]
        },
        {
            "name": "build-blog",
            "command": "python kiss_blog.py --posts ./blog/posts --output public-kiss/blog --templates ./templates",
            "depends": ["setup"]
        },
        {
            "name": "copy-static",
            "command": "cp -r ./blog/static ./public-kiss/",
            "depends": ["setup"]
        }
    ]
}